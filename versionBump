#!/bin/bash

branchName=`git branch | grep "*"`
echo "/============================================================================/"
echo "/==                          üê±  Version bumper üê±                             /"
echo "/============================================================================/"
if [[ -z `git status -s` ]]
then
	git branch
	git checkout master
	git pull origin master
	git checkout ${branchName:2}
	echo "‚ÑπÔ∏è  INFO: Renaming current branch..."
	git branch -m ${branchName:2}_temp
	git branch
	git merge master
	if [ "$1" = "major" ] || [ "$1" = "minor" ] || [ "$1" = "patch" ]
	then
	  versionBumpType=$1
	else
	  versionBumpType="patch"
	fi
	echo "‚ÑπÔ∏è  INFO: Bumping npm version (${versionBumpType})..."
	npm version $versionBumpType
	git add .
	git commit -m "Version bump... temp commit message" --no-verify
	echo "‚ÑπÔ∏è  INFO: Checkout branch based on master that will get pushed..."
	git checkout master
	git checkout -b ${branchName:2}
	git branch
	branchName=`git branch | grep "*"`
	echo "‚ÑπÔ∏è  INFO: Squash new commits in ${branchName:2}_temp into ${branchName:2}..."
	git merge --squash ${branchName:2}_temp
	echo "‚ÑπÔ∏è  INFO: Cleanup..."
	git branch -D ${branchName:2}_temp
	echo "/============================================================================/"
	echo "/==    üê±  Ready for manual commit and push to origin, Version bumped üê±     ==/"
	echo "/============================================================================/"
else
	echo "‚ö†Ô∏è  WARNING: Unable to continue, please commit your work"
fi
git status
